{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recommended"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["define-mixin","mixin","include","if","else"]
            }
        ],
        "color-hex-case": null,
        "no-descending-specificity": null,
        "no-duplicate-selectors": [
            true,
            {
                "severity": "warning"
            }
        ]
    }
}